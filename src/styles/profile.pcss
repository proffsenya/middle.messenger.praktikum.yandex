  font-size: 14px;
  text-decoration: none;
  color: #3369f3;

  &:hover {
    text-decoration: underline;
  }
}

.logout-link {
  color: #ff3b30;
}

.profile-page {
  display: flex;
  min-height: 100vh;
  background: #f4f4f4;
}

.sidebar_profile {
  width: 80px;
  background-color: #f9f9f9;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 1rem 0;
  border-right: 1px solid #eaeaea;
}

.sidebar-back-button {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 36px;
  height: 36px;
  background-color: #3369f3;
  color: #fff;
  border-radius: 50%;
  font-size: 18px;
  text-decoration: none;
  transition: background-color 0.2s;

  &:hover {
    background-color: #2a56d0;
  }
}
